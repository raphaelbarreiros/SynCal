# SynCal environment example (copy to .env.local and adjust values)

# --- Core Secrets (required for startup) ---
DATABASE_URL=postgresql://syncal:syncalsecret@postgres:5432/syncal
SESSION_SECRET=change-me-session-secret-change-me-session-secret
ENCRYPTION_KEY=base64:CHANGE_ME_32_BYTES_MINIMUM
# Provide both values or leave blank to be prompted on first boot.
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-me-admin-password

# --- Service URLs ---
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# --- Server Ports ---
PORT_WEB=3000
PORT_API=3001
POSTGRES_PORT=5432

# --- Runtime Options ---
CORS_ALLOWED_ORIGIN=http://localhost:3000
LOG_LEVEL=info
WORKER_HEARTBEAT_INTERVAL_MS=5000

# --- OAuth Providers (set when enabling connectors) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
GOOGLE_OAUTH_SCOPES="openid email profile https://www.googleapis.com/auth/calendar"

MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=common
MS_REDIRECT_URI=http://localhost:3001/auth/microsoft/callback
MS_OAUTH_SCOPES="openid email profile offline_access Calendars.ReadWrite"

# --- SMTP / Email (optional) ---
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
